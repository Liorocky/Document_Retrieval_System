<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.warmj.dao.TagDao">

    <select id="getTag" parameterType="int" resultType="top.warmj.pojo.Tag">
        SELECT
            *
        FROM
            tag
        WHERE
            id = #{id}
    </select>

    <select id="getAllTag" resultType="top.warmj.pojo.Tag">
        SELECT
            *
        FROM
            tag
        ORDER BY id
    </select>

    <insert id="postTag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tag ( `name` )
        VALUES ( #{name} );
    </insert>

    <delete id="deleteTag" parameterType="int">
        DELETE
        FROM
            tag
        WHERE
            id = #{id}
    </delete>
</mapper>
