<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.warmj.dao.FileBoxDao">

    <resultMap type="FileBox" id="FileBoxResultMap">
        <result column="add_time" property="addTime"/>
        <result column="last_time" property="lastTime"/>
    </resultMap>

    <resultMap type="File" id="FileResultMap">
        <id column="file_box_id" property="fileBoxId" javaType="long" jdbcType="INTEGER"/>
        <result column="number_order" property="numberOrder" javaType="long" jdbcType="INTEGER"/>
        <result column="path" property="path" javaType="String" jdbcType="VARCHAR"/>
        <result column="type" property="type" javaType="String" jdbcType="VARCHAR"/>
        <result column="add_time" property="addTime"/>
        <result column="last_time" property="lastTime"/>
    </resultMap>

    <select id="getFileBox" parameterType="int" resultMap="FileBoxResultMap">
        SELECT
            *
        FROM
            file_box
        WHERE
            id = #{id}
    </select>

    <select id="getFiles" parameterType="int" resultMap="FileResultMap">
        SELECT
            *
        FROM
            file
        WHERE
            file_box_id = #{id}
    </select>

    <select id="getAllFileBox" resultMap="FileBoxResultMap">
        SELECT
            *
        FROM
            file_box
    </select>

    <insert id="postFileBox">
        INSERT INTO file_box (`title`, `desc`, `count`, `add_time`, `last_time`)
        VALUES (#{title}, #{desc}, #{count}, NOW(), NOW());
    </insert>

    <delete id="deleteFileBox" parameterType="int">
        DELETE
        FROM
            file_box
        WHERE
            id = #{id}
    </delete>
</mapper>
