<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.warmj.dao.RelationDao">

    <resultMap type="Relation" id="RelationResultMap">
        <result column="tag_id" property="tagId"/>
        <result column="file_box_id" property="fileBoxId"/>
    </resultMap>

    <select id="getRelation" parameterType="int" resultMap="RelationResultMap">
        SELECT
            *
        FROM
            relation
        WHERE
            id = #{id}
    </select>

    <select id="getAllRelation" resultMap="RelationResultMap">
        SELECT
            *
        FROM
            relation
    </select>

    <insert id="postRelation">
        INSERT INTO relation (tag_id, file_box_id)
        VALUES ( #{tagId}, #{fileBoxId} );
    </insert>

    <delete id="deleteRelation" parameterType="int">
        DELETE
        FROM
            relations
        WHERE
            id = #{id}
    </delete>
</mapper>
